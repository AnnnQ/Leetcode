{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "C++ Debug",
      "type": "cppdbg",  // 调试器类型（gdb/lldb 用 cppdbg，MSVC 用 cppvsdbg）
      "request": "launch",
      "program": "${fileDirname}\\${fileBasenameNoExtension}.exe", // 可执行文件路径
      "args": [],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}",
      "environment": [],
      "externalConsole": true,
      "MIMode": "gdb",  // 使用 gdb 时需指定
      "miDebuggerPath": "C:\\msys64\\ucrt64\\bin\\gdb.exe",  // 或完整路径如 "C:/mingw64/bin/gdb.exe"
      "preLaunchTask": "C/C++: g++.exe 生成活动文件",  // 必须与 tasks.json 中的 "label" 一致
      "setupCommands": [
        {
          "description": "为 gdb 启用整齐打印",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        }
      ]
    }
  ]
}